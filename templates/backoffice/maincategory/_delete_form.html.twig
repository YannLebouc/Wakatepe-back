{% if is_granted('ROLE_ADMIN') %}

<form method="post" action="{{ path('app_backoffice_maincategory_delete', {'id': main_category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ main_category.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>

{% endif %}
